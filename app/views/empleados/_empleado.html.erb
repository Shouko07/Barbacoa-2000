<table class="table table-striped table-hover">
  <thead>
    <tr>
        <th class="text-center"></th>
        <th class="text-center">Nombre</th>
        <th class="text-center">Puesto</th>
        <th class="text-center">Horario</th>
        <th class="text-center">Estado</th>
        <th class="text-center">RFC</th>
        <th class="text-center">Teléfono</th>
        <th class="text-center">Edad</th>
        <th class="text-center">Fecha Contratación</th>
        <th class="text-center">Accion</th>

    </tr>
    </thead>
    <tbody>
    <tr>
        <td class="text-center"><%= image_tag "Komi.jpg", alt: "Logo de la empresa", class: "avatar" %></td>
        <td class="text-center">
        <%= link_to "#{empleado.nombre} #{empleado.apellido_paterno} #{empleado.apellido_materno}", empleado_path(empleado) %>
      </td>        <td class="text-center"><%= empleado.puesto %></td>
        <td class="text-center"><%= empleado.horario %></td>
        <td><span class="status text-success">&bull;</span> Active</td>
        <td class="text-center"><%= empleado.rfc %></td>
        <td class="text-center"><%= empleado.telefono %></td>
        <td class="text-center"><%= empleado.edad %></td>
        <td class="text-center"><%= empleado.fecha_contratacion %></td>
        <td>
        <%= link_to empleado, class: "settings", title: "Settings", data: { toggle: "tooltip" } do %>
          <i class="material-icons">&#xE8B8;</i>
        <% end %>
                  <a href="#" class="delete" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE5C9;</i></a>
        </td>
    </tr>
  </tbody>
</table>