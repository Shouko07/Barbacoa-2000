<div class="formulario-container">
  <%= form_with(model: inventario, local: true) do |form| %>
    <% if inventario.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(inventario.errors.count, "error") %> errores impidieron guardar el inventario:</h2>
        <ul>
          <% inventario.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <h4>Informaci√≥n del Inventario</h4>

      <div class="input-group input-group-icon">
        <%= form.text_field :producto, placeholder: "Producto" %>
        <div class="input-icon">
          <i class="fa fa-box"></i>
        </div>
      </div>

      <div class="input-group input-group-icon">
        <%= form.number_field :cantidad, placeholder: "Cantidad" %>
        <div class="input-icon">
          <i class="fa fa-sort-numeric-up"></i>
        </div>
      </div>

      <div class="input-group input-group-icon">
        <%= form.text_field :tipo_almacenamiento, placeholder: "Tipo de Almacenamiento" %>
        <div class="input-icon">
          <i class="fa fa-warehouse"></i>
        </div>
      </div>
    </div>

<div class="row">
  <div class="input-group">
    <%= form.submit "Guardar utileria", class: "btn-cafe" %>
  </div>
  <div class="input-group">
    <%= link_to "Volver al inventario", inventarios_path, class: "btn-cafe" %>
  </div>
</div>



  <% end %>

</div>
